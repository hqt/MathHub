@using MathHub.Web.Models.ProblemVM
@model CommentListVM
@{
    foreach(CommentItemVM comment in Model.CommentItemVms)
    {
        @Html.Partial("Partials/_CommentItem", comment)
    }
    
    using (@Html.BeginForm("Comment", "Problem", FormMethod.Post, null))
    {
        @Html.LabelFor(m => m.NewComment)
        @Html.TextAreaFor(m => m.NewComment)
        <input type="submit" name="addComment" value="Send"/>
    }
}