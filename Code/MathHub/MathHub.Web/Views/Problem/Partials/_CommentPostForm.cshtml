@model MathHub.Web.Models.ProblemVM.CommentPostVM

    @using (Html.BeginForm("AddComment", "Problem", FormMethod.Post, 
                            new { style = "display:none", id = "commentPostForm" }))
    {
        @Html.LabelFor(m => m.Content)
        @Html.TextAreaFor(m => m.Content)
        @Html.ValidationMessageFor(m => m.Content)

        @Html.HiddenFor(m => m.MainPostId)
        @Html.HiddenFor(m => m.Type)
        <input type="button" name="addComment" onclick="postComment('commentPostForm','problemComments', @Model.MainPostId, 'problemComments')" value="Send"/>
    }