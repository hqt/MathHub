@* form to post a comment (of a question/reply ...) to server *@
@model MathHub.Web.Models.DiscussionVM.DCommentPostVM

    @using (Html.BeginForm("AddComment", "Problem", FormMethod.Post, 
                            new { style = "display:none", id = "comment-post-form" }))
    {
        @Html.LabelFor(m => m.Content)
        @Html.TextAreaFor(m => m.Content)
        @Html.ValidationMessageFor(m => m.Content)

        @Html.HiddenFor(m => m.MainPostId)
        @Html.HiddenFor(m => m.Type)
        <input type="button" name="addComment" onclick="postComment('commentPostForm','problemComments', @Model.MainPostId, -1)" value="Send"/>
    }